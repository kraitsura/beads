{
  "name": "beads",
  "description": "AI-supervised issue tracker for coding workflows. Manage tasks, discover work, and maintain context with simple CLI commands.",
  "version": "0.31.0",
  "author": {
    "name": "Aarya Reddy",
    "url": "https://github.com/kraitsura"
  },
  "repository": "https://github.com/kraitsura/beads",
  "license": "MIT",
  "homepage": "https://github.com/kraitsura/beads",
  "keywords": [
    "issue-tracker",
    "task-management",
    "ai-workflow",
    "agent-memory",
    "mcp-server"
  ],
  "mcpServers": {
    "beads": {
      "command": "uv",
      "args": [
        "--directory",
        "${CLAUDE_PLUGIN_ROOT}/integrations/beads-mcp",
        "run",
        "beads-mcp"
      ],
      "env": {}
    }
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bd prime"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bd prime"
          }
        ]
      }
    ]
  }
}
